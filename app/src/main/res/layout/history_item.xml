<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/history_row_from"
        android:layout_width="268dp"
        android:layout_height="30dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="0dp"
        app:layout_constraintLeft_toRightOf="@+id/history_row_fav"
        app:layout_constraintRight_toLeftOf="@+id/history_row_translate_direction"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/history_row_to"
        android:layout_width="268dp"
        android:layout_height="19dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/history_row_from"
        app:layout_constraintRight_toRightOf="@+id/history_row_from"
        app:layout_constraintTop_toBottomOf="@+id/history_row_from" />

    <ImageView
        android:id="@+id/history_row_fav"
        android:layout_width="46dp"
        android:layout_height="42dp"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/btn_star_big_on" />

    <TextView
        android:id="@+id/history_row_translate_direction"
        android:layout_width="60dp"
        android:layout_height="48dp"
        android:layout_marginRight="0dp"
        app:layout_constraintLeft_toRightOf="@id/history_row_from"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>