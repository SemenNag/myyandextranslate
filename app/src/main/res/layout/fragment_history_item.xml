<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/history_row_isFav"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@color/icons"
        android:textAlignment="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.constraint.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/history_row_isFav"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/history_row_from"
            android:layout_width="268dp"
            android:layout_height="30dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:textColor="@color/primary_text"
            android:textSize="@dimen/font_size_large"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/history_row_translate_direction"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/history_row_to"
            android:layout_width="268dp"
            android:layout_height="25dp"
            android:textColor="@color/secondary_text"
            android:textSize="@dimen/font_size_medium"
            app:layout_constraintLeft_toLeftOf="@+id/history_row_from"
            app:layout_constraintRight_toRightOf="@+id/history_row_from"
            app:layout_constraintTop_toBottomOf="@+id/history_row_from" />

        <TextView
            android:id="@+id/history_row_translate_direction"
            android:layout_width="60dp"
            android:layout_height="48dp"
            android:textColor="@color/secondary_text"
            android:textSize="@dimen/font_size_large"
            app:layout_constraintLeft_toRightOf="@+id/history_row_from"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>